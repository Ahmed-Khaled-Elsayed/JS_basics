//Ask the user to choose how many numbers they want to enter.
//Store these numbers in an array.
//Use the sort method to arrange the array values in:
//Ascending order
//Descending order
//Display both results in the console.

function cmpAsc(a,b)
{
    return a-b;
}
function cmpdsc(a,b)
{
    return b-a;
}

let n = prompt("enter array size");
let arr=[];
for(let i=0;i<n;i++)
{
    let num = Number(prompt("enter the value # "+(i+1)));
    arr.push(num);
}
arr.sort(cmpdsc);
console.log("descending : ",arr);

arr.sort(cmpAsc);
console.log("ascending : ",arr);
